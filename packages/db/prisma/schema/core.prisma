model Monitor {
  id   String @id @default(uuid())
  name String
  url  String
  freq String @default("5m")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  ticks Tick[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("monitor")
}

model Region {
  id   String @id @default(uuid())
  name String
  code String @unique

  ticks Tick[]

  @@map("region")
}

model Tick {
  id             String        @id @default(uuid())
  status         MonitorStatus
  responseTimeMs Int?
  errorMessage   String?
  checkedAt      DateTime      @default(now())

  regionId String
  region   Region @relation(fields: [regionId], references: [id], onDelete: Cascade)

  monitorId String
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tick")
}

enum MonitorStatus {
  UP
  DOWN
  UNKNOWN

  @@map("monitor_status")
}

model StatusPage {
  id       String  @id @default(uuid())
  slug     String  @unique
  title    String
  isPublic Boolean @default(true)
  verified Boolean @default(false)

  incidents Incident[]

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("status_page")
}

model Incident {
  id          String         @id @default(uuid())
  title       String
  description String?
  status      IncidentStatus @default(ONGOING)
  startedAt   DateTime       @default(now())
  resolvedAt  DateTime?

  statusPageId String
  statusPage   StatusPage @relation(fields: [statusPageId], references: [id], onDelete: Cascade)

  @@map("incident")
}

enum IncidentStatus {
  ONGOING
  RESOLVED

  @@map("incident_status")
}
